# =================================
# Skill Vault Max - Environment Configuration
# =================================

# Application Configuration
NODE_ENV=development
PORT=5000
APP_NAME=Skill Vault Max
APP_VERSION=2.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/microcred_db
MONGODB_TEST_URI=mongodb://localhost:27017/microcred_test_db

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Python Microservices
PYTHON_SERVICE_URL=http://localhost:5001
PYTHON_SERVICE_TIMEOUT=30000

# External API Configuration
DIGILOCKER_API_URL=https://api.digilocker.gov.in
DIGILOCKER_API_KEY=your_digilocker_api_key
SKILL_INDIA_API_URL=https://api.skillindia.gov.in
SKILL_INDIA_API_KEY=your_skill_india_api_key

# Mock API Configuration
MOCK_API_URL=http://localhost:5002
MOCK_UDEMY_API_URL=http://localhost:5002/udemy
MOCK_COURSERA_API_URL=http://localhost:5002/coursera

# File Storage Configuration
UPLOAD_PATH=./uploads/certificates/
TEMP_PATH=./temp/
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/
LOG_MAX_SIZE=20971520
LOG_MAX_FILES=5

# QR Code Configuration
QR_CODE_SIZE=256
QR_CODE_ERROR_CORRECTION=M
QR_CODE_MARGIN=4

# Blockchain Configuration (Mock)
BLOCKCHAIN_NETWORK=mock
BLOCKCHAIN_DIFFICULTY=2
BLOCKCHAIN_MINING_REWARD=10

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@skillvaultmax.com

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring and Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Development Configuration
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_CORS_DEBUG=false

# Production Security (Set these in production)
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=false
HELMET_CROSS_ORIGIN_OPENER_POLICY=false
HELMET_CROSS_ORIGIN_RESOURCE_POLICY=false

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# Certificate Verification Settings
VERIFICATION_TIMEOUT=60000
MAX_VERIFICATION_RETRIES=3
ENABLE_BLOCKCHAIN_VERIFICATION=true
ENABLE_API_VERIFICATION=true
ENABLE_QR_VERIFICATION=true
ENABLE_SIGNATURE_VERIFICATION=true

# NSQF Configuration
NSQF_API_URL=https://api.nsqf.gov.in
NSQF_API_KEY=your_nsqf_api_key
ENABLE_NSQF_VALIDATION=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups/

# Performance Configuration
CLUSTER_MODE=false
WORKER_PROCESSES=auto
MEMORY_LIMIT=512MB
REQUEST_TIMEOUT=30000

# Feature Flags
ENABLE_EMPLOYER_PORTAL=true
ENABLE_BULK_VERIFICATION=true
ENABLE_PUBLIC_VERIFICATION=true
ENABLE_CERTIFICATE_SHARING=true
ENABLE_ADVANCED_ANALYTICS=true
